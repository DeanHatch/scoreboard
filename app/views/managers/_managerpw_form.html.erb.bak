<%= form_for @competition,
                   url: competition_manager_managerpw_path(@competition),
		   method: :patch do |f| %>
  <% if @competition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@competition.errors.count, "error") %> prohibited this competition from being saved:</h2>

      <ul>
      <% @competition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :hashed_manager_password, 'Enter Password:' %>
    <%= f.password_field :manager_password, :size => 40 %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, 'Re-enter Password to Confirm:' %>
    <%= f.password_field :manager_password_confirmation, :size => 40 %>
  </div>
  <div class="actions">
    <%= f.submit  'Change Manager Password' %>
  </div>
<% end %>
