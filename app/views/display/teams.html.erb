<h1>Display#teams</h1>
<p>Select a Team here</p>


<table class="schedule">
  <thead>
    <tr>
      <th>ID</th>
      <th>Team Name</th>
    </tr>
  </thead>

  <tbody>
      <!-- Show sorted, unique Teams -->
    <% @teams.sort{ |a,b| a.name <=> b.name }.each do |team| %>
      <tr>
        <td><%= team.id %></td>
        <td><%= link_to team.name, rustydog_path(@competition.id, team.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

