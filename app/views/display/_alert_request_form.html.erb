<%= form_for(set_alert_path(@competition, @team)) do |f| %>
  <% if @competition.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@competition.errors.count, "error") %> kept you from logging in:</h2>

      <ul>
      <% @competition.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label :to_dest, 'Enter your phone number:' %>
    <%=phone_field :alert, :to_dest, :size => 20 %>
    <%= collection_select(:alert, :mobile_carrier, 
                                     [ [nil,nil] ] + carrier_collection, 
				      :last, 
				      :first) %>
  </div>
  <h5>and / or</h5>
  <div class="field">
    <%= label :emailaddr, 'Enter your email address:' %>
    <%= email_field :alert, :emailaddr, :size => 80 %>
  </div>
  <div class="actions">
    <%= f.submit 'Alert Me!' %>
  </div>
<% end %>
