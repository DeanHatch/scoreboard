<h4>Scores</h4>

<table class="schedule">
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3">Score</th>
    </tr>
  </thead>

  <tbody>
      <!-- Show sorted, unique Teams -->
    <% @grouping.contests.select{|c| c.has_score?}.each do |cntst| %>
      <tr>
        <td><%= cntst.display_date %></td>
        <td><%= cntst.name %></td>
	<td><%= cntst.awaycontestant.team.name %> <%= cntst.awaycontestant.score %></td>
	<td><%= cntst.homecontestant.team.name %> <%= cntst.homecontestant.score %></td>
      </tr>
    <% end %>
  </tbody>
  </table>