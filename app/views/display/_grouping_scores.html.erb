<h4>Scores</h4>

<table class="schedule">
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3">Score</th>
    </tr>
  </thead>

  <tbody>
      <!-- Show Game Results, sorted by Date/Time -->
    <% moreThanOneType = (@contests.collect{|c|c.type}.uniq.size()>1) %> 
    <% lastType = nil %>
    <% @contests.each do |cntst| %>
      <% if moreThanOneType && cntst.type != lastType %>
        <tr><th class="typeBanner" colspan="4"><%= group_results_section_label(cntst.competition,cntst.type() )%></th></tr>
	<% lastType = cntst.type() %>
       <% end %>
      <tr>
        <td><%= cntst.display_date %></td>
        <td><%= cntst.name %></td>
	<td><%= cntst.awaycontestant.team.name %> <%= cntst.awaycontestant.score %></td>
	<td><%= cntst.homecontestant.team.name %> <%= cntst.homecontestant.score %></td>
      </tr>
    <% end %>
  </tbody>
  </table>