<h4>Schedule</h4>


<table class="schedule">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
      <th colspan="3">Teams</th>
    </tr>
  </thead>

  <tbody>
      <!-- Show sorted, unique Teams -->
    <% moreThanOneType = (@contests.collect{|c|c.type}.uniq.size()>1) %> 
    <% lastType = nil %>
    <% @contests.each do |cntst| %>
      <% if moreThanOneType && cntst.type != lastType %>
        <tr><th class="typeBanner" colspan="6"><%= group_schedule_section_label(cntst.competition,cntst.type() )%></th></tr>
	<% lastType = cntst.type() %>
       <% end %>
      <tr>
        <td><%= cntst.display_date %></td>
        <td><%= cntst.display_time %></td>
        <td><%= cntst.venue_name %></td>
	<td><%= cntst.awaycontestant.fullname %></td>
        <td>at</td>
	<td><%= cntst.homecontestant.fullname %></td>
      </tr>
    <% end %>
  </tbody>
  </table>