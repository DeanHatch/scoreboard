<h1>Regular Contests</h1>

<br>

<%= button_to 'Schedule a Single Contest', new_regularcontest_path, method: :get %><br/>
<%= button_to 'Schedule a Round Robin for a Group',
                      rrobin_regularcontests_path,
                      method: :get %>
<!-- %= button_to 'Schedule a Round Robin for a Group', 
       controller: "regularcontests", action: "rrobin", method: :get % -->

<br>

<table>
  <thead>
    <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Teams</th>
        <th>Where</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @regularcontests.sort.each do |regularcontest| %>
      <tr>
        <td><%= regularcontest.display_date  %></td>
        <td><%= regularcontest.display_time  %></td>
        <td><%= regularcontest.awaycontestant.fullname if regularcontest.awaycontestant %>
        at <%= regularcontest.homecontestant.fullname if regularcontest.homecontestant %></td>
        <td><%= regularcontest.venue_name  %></td>
        <td><%= link_to 'Show', regularcontest_path(regularcontest)  %></td>
        <td><%= link_to 'Edit', edit_regularcontest_path(regularcontest) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Regularcontest', new_regularcontest_path %>
