<h1>Regular Contests</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Venue</th>
      <th>Status</th>
      <th colspan="3">What to do</th>
    </tr>
  </thead>

  <tbody>
    <% @regularcontests.each do |regularcontest| %>
      <tr>
        <td><%= regularcontest.display_date %></td>
        <td><%= regularcontest.display_time %></td>
        <td><%= regularcontest.venue_name %></td>
        <td><%= regularcontest.status %></td>
        <td><%= regularcontest.awaycontestant.team.name if regularcontest.awaycontestant.team %></td>
        <td>at <%= regularcontest.homecontestant.team.name if regularcontest.homecontestant.team %></td>
        <td><%= link_to 'Change', edit_regularcontest_path(regularcontest) %></td>
        <td><%= link_to 'Remove', regularcontest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Regular Contest', new_regularcontest_path %><br/>
<%= link_to 'Schedule a Round Robin for a Group',
       controller: "regularcontests", action: "rrobin" %>
