<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Grouping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, edit_team_path(team) %></td>
        <td><%= Grouping.find(team.grouping_id).name if team.grouping_id %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
